platform :ios, '9.0'
use_frameworks!

target "TrafficMaps" do
	pod 'EVReflection'
	pod 'Alamofire'
	pod 'AlamofireNetworkActivityIndicator'
	pod 'AlamofireXmlToObjects'	
	pod 'EVReflection/XML'
end

target "MountainMaps" do
	pod 'EVReflection'
	pod 'Alamofire'
	pod 'AlamofireNetworkActivityIndicator'
	pod 'AlamofireXmlToObjects'
	pod 'EVReflection/XML'
end

target "ToiletMaps" do
	pod 'EVReflection'
	pod 'Alamofire'
	pod 'AlamofireNetworkActivityIndicator'
	pod 'AlamofireXmlToObjects'
	pod 'EVReflection/XML'
end

target "ATMMaps" do
	pod 'EVReflection'
	pod 'Alamofire'
	pod 'AlamofireNetworkActivityIndicator'
	pod 'AlamofireXmlToObjects'
	pod 'EVReflection/XML'
end

target "PicnicMaps" do
	pod 'EVReflection'
	pod 'Alamofire'
	pod 'AlamofireNetworkActivityIndicator'
	pod 'AlamofireXmlToObjects'
	pod 'EVReflection/XML'
end

target "SingleTrailMaps" do
	pod 'EVReflection'
	pod 'Alamofire'
	pod 'AlamofireNetworkActivityIndicator'
	pod 'AlamofireXmlToObjects'
	pod 'EVReflection/XML'
end

target "SegmentMaps" do
	pod 'EVReflection'
	pod 'StravaKit', '~> 0.9'
	pod 'Alamofire', '~> 4.0'
	pod 'AlamofireNetworkActivityIndicator'
	pod 'AlamofireXmlToObjects'
	pod 'EVReflection/XML'
end
